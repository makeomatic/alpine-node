FROM makeomatic/node:9.7.1-vips

# to build native deps
RUN \
  apk add --update \
    fftw-dev \
    vips-dev \
    build-base \
    python \
    make \
    ca-certificates \
    openssl \
    make \
    g++ \
    linux-headers \
  && rm -rf \
    /etc/apk/cache/* \
    /var/cache/apk/*

WORKDIR /src
