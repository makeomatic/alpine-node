FROM makeomatic/node:$VERSION-vips

# to build native deps
RUN \
  apk --no-cache upgrade \
  && apk --no-cache add \
    fftw-dev \
    vips-dev \
    build-base \
    python \
    make \
    ca-certificates \
    openssl \
    make \
    g++ \
    linux-headers \
  && rm -rf \
    /etc/apk/cache/* \
    /var/cache/apk/*

WORKDIR /src
