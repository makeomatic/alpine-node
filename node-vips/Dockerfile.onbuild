FROM makeomatic/node:10.14.2-vips

ONBUILD WORKDIR /src

ONBUILD COPY package.json yarn.lock ./
ONBUILD RUN \
  apk add --no-cache --virtual .flavorDeps \
    git \
    g++ \
    make \
    fftw-dev@edge \
    vips-dev@edge \
  && yarn --production --frozen-lockfile \
  && apk del .flavorDeps \
  && yarn cache clean \
  && rm -rf \
    /tmp/* \
    /root/.node-gyp \
    /root/.npm

ONBUILD COPY . /src
ONBUILD RUN chown -R node /src
ONBUILD USER node
