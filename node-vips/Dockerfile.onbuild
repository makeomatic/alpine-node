FROM makeomatic/node:6.9.4-vips

ONBUILD WORKDIR /src

ONBUILD COPY package.json .
ONBUILD RUN \
  apk add --no-cache --virtual .flavorDeps \
    git \
    g++ \
    make \
    vips-dev@local \
  && npm install --production \
  && npm dedupe \
  && apk del .flavorDeps \
  && rm -rf \
    /tmp/* \
    /root/.node-gyp \
    /root/.npm

ONBUILD COPY . /src
ONBUILD RUN chown -R node /src
ONBUILD USER node
